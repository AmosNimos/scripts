#!/bin/bash
# relaunch DWM if the binary changes, otherwise bail

killall deadd-notification-center
deadd-notification-center &

killall picom
picom &

killall sxhkd
sleep 2 && sxhkd &

~/.xprofile
feh --no-fehbg --bg-scale '/home/sayan/.config/bg' &

csum=""
new_csum=$(sha1sum $(which dwm))
while true
do
    if [ "$csum" != "$new_csum" ]
    then
        csum=$new_csum
        dwm
    else
        exit 0
    fi
    new_csum=$(sha1sum $(which dwm))
    sleep 0.5
done
